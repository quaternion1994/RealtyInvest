@model IEnumerable<RealtyInvest.DataModel.ViewModels.Manage.RealtyManageViewModel>

@{
    ViewBag.Title = "My real estate";
    Layout = "~/Views/InvestorManage/Index.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-2 col-md-4">
            <div class="thumbnail">
                <img src="@item.PictureUrl" alt="@item.Name">
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>$@item.Price</p>
                    <p>@item.Description</p>
                    <p>
                        <a href="@Url.Action("RealtyView","Home")" class="btn btn-primary" role="button">View</a>
                        <a href="@Url.Action("EditEstate","InvestorManage", new {id = item.Id})" class="btn btn-default" role="button">Edit</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
