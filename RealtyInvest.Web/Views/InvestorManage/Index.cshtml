@using Ninject.Activation
@using RealtyInvest.Common.Utils

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>

<div class="row">
    <div class="col-lg-3">
        <div class="list-group">
            <a type="button" class="list-group-item @Html.IsSelected(actions: "Manage", controllers: "Account", cssClass:"active")" href="@Url.Action("Manage", "Account")">Account management</a>
            @if (Request.IsAuthenticated && User.IsInRole("Owner"))
            {
                <a type="button" class="list-group-item @Html.IsSelected(actions: "MyEstate", controllers: "InvestorManage", cssClass:"active")" href="@Url.Action("MyEstate", "InvestorManage")">My real estate</a>
                <a type="button" class="list-group-item">Morbi leo risus</a>
                <a type="button" class="list-group-item">Porta ac consectetur ac</a>
                <a type="button" class="list-group-item">Vestibulum at eros</a>
              }
        </div>
    </div>
    <div class="col-lg-7">
       @RenderBody()
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
